<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane onMouseEntered="#initializationPeriod" prefHeight="393.0" prefWidth="525.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="clientWindow.typeOfpurchaseHandller">
   <children>
      <RadioButton fx:id="_radioOneTimeP" layoutX="61.0" layoutY="61.0" mnemonicParsing="false" onAction="#setOne" text="One Time Purchase" />
      <RadioButton fx:id="_radioSubP" layoutX="299.0" layoutY="61.0" mnemonicParsing="false" onAction="#setSubs" selected="true" text="Purchase Subscription" />
      <Button fx:id="butBTN" defaultButton="true" disable="true" layoutX="61.0" layoutY="280.0" mnemonicParsing="false" onAction="#butMap" prefHeight="75.0" prefWidth="107.0" text="Buy " />
      <Button fx:id="cancelBtn" cancelButton="true" layoutX="357.0" layoutY="280.0" mnemonicParsing="false" onAction="#cancelPurchase" prefHeight="75.0" prefWidth="107.0" text="Cancel" />
      <Label fx:id="_labelToOneTimeP" layoutX="49.0" layoutY="106.0" prefHeight="75.0" prefWidth="428.0" text="The purchase enables a one-time download of the maps from the company's archive in their version at the time of purchase." textFill="#ee6815" visible="false" wrapText="true">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Label>
      <Label fx:id="_labelSubP" layoutX="61.0" layoutY="106.0" prefHeight="106.0" prefWidth="401.0" text="This purchase allows you to view and download all city maps including tours(Unlimited number of times) and to receive all updates made during the subscription (the period defined at the time of purchase)." textFill="#ee6815" wrapText="true">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Label>
      <ComboBox fx:id="_comboBoxPeriod" layoutX="207.0" layoutY="226.0" onAction="#periodChoose" prefHeight="31.0" prefWidth="257.0" promptText="Choose Period" />
      <Label fx:id="subsField" layoutX="61.0" layoutY="231.0" text="Subscription period" />
   </children>
</AnchorPane>
